@page "/contacts/{Id}/edit/email-list-marketing"
@model CompanyBilling.Pages.Contacts.Edit.EMailListMarketingModel
@{
	if (null == Model.Contact)
		throw new Exception("null == Model.Contact");
}

<div>
	<a href="/">Home</a> &#187; <a href="/contacts">Contacts</a> &#187; <a href="/Contacts/@Model.Contact.Uuid">@Model.Contact.FullName</a> &#187; <a href="">Edit E-Mail List Marketing</a>
</div>

<h1>Change @(Model.Contact.FullName)'s email list marketing.</h1>
@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
	<p style="color: red;">@Model.ErrorMessage</p>
}
<form method="post">
	<dl>
		<dt>New Value</dt>
		<dd class="expandinput"><input type="checkbox" asp-for="Value" /></dd>
		<dt></dt>
		<dd class="expandinput"><input type="submit" value="Save" /></dd>
	</dl>
</form>
