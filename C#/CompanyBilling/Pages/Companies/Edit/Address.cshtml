@page "/companies/{Id}/edit/address"
@model ManuallyProcessPreAuthorizedPayments.Pages.Company.Edit.AddressModel
@{
	if (null == Model.Company)
		throw new Exception("null == Model.Company");
}
<div>
	<a href="/">Home</a> &#187; <a href="/companies">Companies</a> &#187; <a href="/companies/@Model.Company.Uuid">@Model.Company.FullName</a>
</div>
<h1>Change @(Model.Company.FullName)'s address.</h1>
@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
	<p style="color: red;">@Model.ErrorMessage</p>
}
<form method="post">
	<dl>
		<dt>Address Line 1</dt>
		<dd class="expandinput"><input type="text" asp-for="ValueAddressLine1" /></dd>
		<dt>Address Line 2</dt>
		<dd class="expandinput"><input type="text" asp-for="ValueAddressLine2" /></dd>
		<dt>City</dt>
		<dd class="expandinput"><input type="text" asp-for="ValueCity" /></dd>
		<dt>Province</dt>
		<dd class="expandinput"><input type="text" asp-for="ValueProvince" /></dd>
		<dt>Country</dt>
		<dd class="expandinput"><input type="text" asp-for="ValueCountry" /></dd>
		<dt>PostalCode</dt>
		<dd class="expandinput"><input type="text" asp-for="ValuePostalCode" /></dd>
		<dt></dt>
		<dd class="expandinput"><input type="submit" value="Save" /></dd>
	</dl>
</form>